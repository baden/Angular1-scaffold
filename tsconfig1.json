{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "pretty": true,
    "stripInternal": true,
    "noEmitHelpers": true,
    "lib": ["es2015", "dom"],
    "typeRoots": [
      "node_modules/@types/"
    ],
    "types": [
      "angular",
      "node"
    ]
  },
  "exclude": [
    "src/**/*.spec.*",
    "node_modules"
  ],
  "compileOnSave": false
}
